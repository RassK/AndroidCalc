<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ee.android.rassk.androidcalc.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tableLayout"
        android:layout_marginBottom="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="21pt"
                android:layout_weight="1"
                android:id="@+id/inputView"
                android:singleLine="true"
                android:ellipsize="start"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="CE"
                android:textSize="20sp"
                android:id="@+id/btn_reset"
                android:tag="Full"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="C"
                android:textSize="20sp"
                android:id="@+id/btn_clear"
                android:tag="Clear"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="DEL"
                android:textSize="20sp"
                android:id="@+id/btn_del"
                android:tag="Delete"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="/"
                android:textSize="20sp"
                android:id="@+id/btn_command_share"
                android:tag="Divide"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:textSize="25sp"
                android:id="@+id/btn7"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:textSize="25sp"
                android:id="@+id/btn8"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:textSize="25sp"
                android:id="@+id/btn9"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="X"
                android:textSize="20sp"
                android:id="@+id/btn_command_mult"
                android:tag="Multiply"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:textSize="25sp"
                android:id="@+id/btn4"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:textSize="25sp"
                android:id="@+id/btn5"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:textSize="25sp"
                android:id="@+id/btn6"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="-"
                android:textSize="20sp"
                android:id="@+id/btn_command_sub"
                android:tag="Subtract"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:textSize="25sp"
                android:id="@+id/btn1"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:textSize="25sp"
                android:id="@+id/btn2"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:textSize="25sp"
                android:id="@+id/btn3"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:textSize="20sp"
                android:id="@+id/btn_command_add"
                android:tag="Add"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+/-"
                android:textSize="20sp"
                android:id="@+id/btn_command_neg"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:textSize="25sp"
                android:id="@+id/btn0"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="."
                android:textSize="20sp"
                android:id="@+id/btn_comma"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="="
                android:textSize="35sp"
                android:id="@+id/btn_command_eq"
                android:layout_weight="0.25"
                android:textColor="@color/White"
                android:background="@drawable/button_selector_special"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>
